-- Load Vape UI Library
local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/Vape.txt"))()

-- Create Main Window
local win = lib:Window("Pull Vector Feature", Color3.fromRGB(44, 120, 224), Enum.KeyCode.RightControl)

-- Create a New Tab
local tab = win:Tab("Pull Vector")

-- Initialize Services
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- Initialize Variables
local pullVectorEnabled = false -- Toggle Variable for Pull Vector Feature
local pullRange = 10 -- Default range
local pullStrength = 10 -- Default pull strength

-- Function to Apply Pull Vector
local function applyPullVector()
    local player = Players.LocalPlayer
    local character = player.Character
    if not character then return end
    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    if not humanoidRootPart then return end

    RunService.Heartbeat:Connect(function()
        if not pullVectorEnabled then return end

        local ball = Workspace:FindFirstChild("Football")
        if ball and ball:IsA("BasePart") then
            local ballPosition = ball.Position
            local playerPosition = humanoidRootPart.Position
            local distance = (ballPosition - playerPosition).magnitude
            
            if distance <= pullRange then
                -- Calculate the direction and apply force
                local direction = (ballPosition - playerPosition).unit
                humanoidRootPart.Velocity = humanoidRootPart.Velocity + direction * pullStrength
            end
        end
    end)
end

-- Add UI Elements
tab:Toggle("Enable Pull Vector", false, function(state)
    pullVectorEnabled = state
    if pullVectorEnabled then
        applyPullVector()
    end
end)

tab:Slider("Pull Range", 1, 50, 10, function(value)
    pullRange = value
end)

tab:Slider("Pull Strength", 1, 25, 10, function(value)
    pullStrength = value
end)

-- Mobile Compatibility: Simulate a tap to activate the Pull Vector
local UserInputService = game:GetService("UserInputService")
UserInputService.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch then
        if pullVectorEnabled then
            applyPullVector()
        end
    end
end)
