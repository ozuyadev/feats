-- Load Vape UI Library
local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/Vape.txt"))()

-- Create Main Window
local win = lib:Window("Pull Vector", Color3.fromRGB(44, 120, 224), Enum.KeyCode.RightControl)

-- Create a New Tab
local tab = win:Tab("Pull Vector")

-- Initialize Services
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- Initialize Variables
local pullVectorEnabled = false
local range = 10
local pullStrength = 10
local player = Players.LocalPlayer or Players.PlayerAdded:Wait()
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
local mouse = player:GetMouse()
local isMobile = UserInputService.TouchEnabled

-- Function to Apply Pull Vector
local function applyPullVector()
    if not pullVectorEnabled then return end

    -- Check if player is clicking or tapping
    local isClicking = mouse:IsPointInRegion3(mouse.Hit) or (isMobile and UserInputService.TouchEnabled)

    if isClicking then
        for _, part in pairs(Workspace:FindPartsInRegion3(Region3.new(
            humanoidRootPart.Position - Vector3.new(range, range, range),
            humanoidRootPart.Position + Vector3.new(range, range, range)
        ), nil, math.huge)) do
            if part.Name == "Football" and part:IsA("BasePart") then
                local direction = (part.Position - humanoidRootPart.Position).unit
                local distance = (part.Position - humanoidRootPart.Position).magnitude

                -- Apply force to move player towards the ball
                humanoidRootPart.Velocity = humanoidRootPart.Velocity + direction * pullStrength * (1 - (distance / range))
            end
        end
    end
end

-- Add UI Elements
tab:Toggle("Enable Pull Vector", false, function(state)
    pullVectorEnabled = state
end)

tab:Slider("Range", {
    Min = 1,
    Max = 50,
    Default = 10,
    Color = Color3.fromRGB(255, 255, 255),
    Increment = 1,
    ValueName = "Range...",
    Callback = function(value)
        range = value
    end
})

tab:Slider("Pull Strength", {
    Min = 1,
    Max = 25,
    Default = 10,
    Color = Color3.fromRGB(255, 255, 255),
    Increment = 1,
    ValueName = "Pull Strength...",
    Callback = function(value)
        pullStrength = value
    end
})

-- Continuously check for pulling
RunService.Heartbeat:Connect(function()
    applyPullVector()
end)

-- Handle mobile input to simulate tap
if isMobile then
    UserInputService.TouchTap:Connect(function()
        if pullVectorEnabled then
            applyPullVector()
        end
    end)
end
