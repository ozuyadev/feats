-- Load Vape UI Library
local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/Vape.txt"))()

-- Create Main Window
local win = lib:Window("Pull Vector Feature", Color3.fromRGB(44, 120, 224), Enum.KeyCode.RightControl)

-- Create a New Tab
local tab = win:Tab("Pull Vector")

-- Initialize Services
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")

-- Initialize Variables
local pullVectorEnabled = false
local range = 10
local pullStrength = 5000 -- Default strength

-- Function to Apply Pull Vector Force
local function applyPullVector()
    while pullVectorEnabled do
        for _, child in ipairs(Workspace:GetChildren()) do
            if child.Name == "Football" and child:IsA("BasePart") then
                local player = Players.LocalPlayer
                local character = player.Character or player.CharacterAdded:Wait()
                local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")

                if humanoidRootPart then
                    local direction = (child.Position - humanoidRootPart.Position).unit
                    local distance = (child.Position - humanoidRootPart.Position).magnitude

                    if distance <= range then
                        local forceMagnitude = (range - distance) * pullStrength
                        local force = direction * forceMagnitude

                        -- Create or update BodyVelocity
                        local bodyVelocity = humanoidRootPart:FindFirstChildOfClass("BodyVelocity")
                        if not bodyVelocity then
                            bodyVelocity = Instance.new("BodyVelocity")
                            bodyVelocity.Name = "PullVectorBodyVelocity"
                            bodyVelocity.Parent = humanoidRootPart
                        end

                        bodyVelocity.Velocity = force
                        bodyVelocity.MaxForce = Vector3.new(4000, 4000, 4000) -- High max force to ensure effect
                    end
                end
            end
        end
        wait(0.1) -- Check periodically
    end
end

-- UI Elements
tab:Toggle("Enable Pull Vector", false, function(state)
    pullVectorEnabled = state
    if pullVectorEnabled then
        applyPullVector()
    else
        -- Remove BodyVelocity if Pull Vector is disabled
        local player = Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
        if humanoidRootPart then
            local bodyVelocity = humanoidRootPart:FindFirstChild("PullVectorBodyVelocity")
            if bodyVelocity then
                bodyVelocity:Destroy()
            end
        end
    end
end)

tab:Slider("Range", 0, 25, 10, function(value)
    range = value
end)

tab:Slider("Pull Strength", 1000, 10000, 5000, function(value)
    pullStrength = value
end)
